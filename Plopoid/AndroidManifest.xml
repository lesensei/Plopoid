<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bouchot.plopoid"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="Plopoid" >
        <activity
            android:name="PinnipedeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider android:authorities="org.bouchot.plopoid.postsprovider" android:name="PostsProvider"></provider>
        <service android:name="PostsUpdateService"></service>
        <activity android:name="OptionsActivity"></activity>
    </application>

</manifest>